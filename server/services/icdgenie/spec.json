{
  "openapi": "3.0.0",
  "servers": {
    "url": "/"
  },
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/api/opensearch": {
      "post": {
        "tags": [
          "Search"
        ],
        "summary": "Search results for keywords, ICD-10, and ICD-O-3 codes",
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    },
    "/api/batch": {
      "post": {
        "tags": [
          "Batch Export"
        ],
        "summary": "Batch export search results for ICD-10 and ICD-O-3 codes",
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/BatchExportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/BatchExportResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "SearchRequest": {
      "type": "object",
      "properties": {
        "search": {
          "type": "string",
          "description": "A keyword, ICD-10 code, or ICD-O-3 code"
        }
      }
    },
    "SearchResponse": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array"
        }
      }
    },
    "BatchExportRequest": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string",
          "description": "A newline-delimited list of input entries. Each line is deliminated by a tab"
        },
        "inputType": {
          "type": "string",
          "description": "Specifies the type of input data.",
          "enum": [
            "icd10",
            "icdo3"
          ],
          "default": "icd10"
        },
        "id": {
          "type": "bool",
          "description": "Specifies if input contains a participant id column.",
          "enum": [
            true,
            false
          ],
          "default": false
        },
        "icdo3Morph": {
          "type": "bool",
          "description": "Specifies if input contains a morphology code column (ICD-O-3 Inputs Only).",
          "enum": [
            true,
            false
          ],
          "default": false
        },
        "icdo3Site": {
          "type": "bool",
          "description": "Specifies if input contains a site code column (ICD-O-3 Inputs Only).",
          "enum": [
            true,
            false
          ],
          "default": false
        }
      }
    },
    "BatchExportResponse": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array"
        }
      }
    }
  }
}