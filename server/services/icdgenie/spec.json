{
  "openapi": "3.0.0",
  "servers": {
    "url": "/"
  },
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/api/opensearch": {
      "post": {
        "tags": [
          "Search"
        ],
        "summary": "Search results for keywords, ICD-10, and ICD-O-3 codes",
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/SearchResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    },
    "/api/batch": {
      "post": {
        "tags": [
          "Batch Export"
        ],
        "summary": "Batch export search and/or translation results for ICD-10 and ICD-O-3 codes",
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/BatchExportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/BatchExportResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "ICD10SearchResponse": {
      "type": "object",
      "properties": {
        "icdo3": {
          "type": "array"
        }
      }
    },
    "ICDO3SearchResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "histology": {
          "type": "string"
        },
        "behavior": {
          "type": "string"
        },
        "preferred": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "TranslateRequest": {
      "type": "object",
      "properties": {
        "params": {
          "type": "string",
          "description": "ICD-10 code or ICD-O-3 code is expected",
          "default": "C10.0"
        }
      }
    },
    "TranslateResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "icd10": {
          "type": "string"
        },
        "icdo3": {
          "type": "string"
        },
        "icd10Description": {
          "type": "string"
        },
        "icdo3Description": {
          "type": "string"
        }
      }
    },
    "SearchRequest": {
      "type": "object",
      "properties": {
        "search": {
          "type": "string",
          "description": "A keyword, ICD-10 code, or ICD-O-3 code"
        }
      }
    },
    "SearchResponse": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array"
        }
      }
    },
    "BatchExportRequest": {
      "type": "object",
      "properties": {
        "inputType": {
          "type": "string",
          "description": "Specifies the type of input data.",
          "enum": [
            "keywords",
            "icdo3",
            "icd10"
          ],
          "default": "keywords"
        },
        "input": {
          "type": "string",
          "description": "A newline-delimited list of input entries to search or translate."
        },
        "outputType": {
          "type": "string",
          "description": "Specifies the type of output data.",
          "enum": [
            "icdo3",
            "icd10"
          ],
          "default": "icdo3"
        },
        "outputFormat": {
          "type": "string",
          "description": "Specifies the output data format. Use 'csv' to export data as a csv file.",
          "enum": [
            "json",
            "csv"
          ],
          "default": "json"
        }
      }
    },
    "BatchExportResponse": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string"
        },
        "icd10": {
          "type": "string"
        },
        "icdo3": {
          "type": "string"
        },
        "icd10Description": {
          "type": "string"
        },
        "icdo3Description": {
          "type": "string"
        }
      }
    }
  }
}