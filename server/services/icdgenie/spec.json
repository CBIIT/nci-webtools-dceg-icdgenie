{
  "openapi": "3.0.0",
  "servers": {
    "url": "/"
  },
  "tags": [
    {
      "name": "Search"
    }
  ],
  "paths": {
    "/api/search/icd10": {
      "get": {
        "tags": [
          "Search"
        ],
        "summary": "Search ICD-10 by code or description",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "ICD-10 code or partial description. If not specified, a code or description parameter is expected.",
            "type": "string",
            "example": "neoplasm"
          },
          {
            "name": "code",
            "in": "query",
            "description": "ICD-10 code or prefix. If not specified, a description is expected.",
            "type": "string"
          },
          {
            "name": "description",
            "in": "query",
            "description": "Keyword or partial description. If not specified, an ICD-10 code is expected.",
            "type": "string"
          },
          {
            "name": "type",
            "in": "query",
            "description": "Retrieves ICD-10 entries organized by type-specific categories. For example, \"type=neoplasm\" retrieves neoplasms grouped by site and behavior. ",
            "type": "string",
            "enum": [
              "index",
              "drug",
              "injury",
              "neoplasm"
            ],
            "default": "index"
          },
          {
            "name": "format",
            "in": "query",
            "description": "Response format. If \"list\" is specified, results will be formatted as an array of ICD-10 entries, ordered hierarchically. If \"tree\" is specified, results will be formatted as a hierarchical tree of ICD-10 entries. In both cases, all parent nodes will also be returned.",
            "type": "string",
            "enum": [
              "list",
              "tree"
            ],
            "default": "list"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/ICD10SearchResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    },
    "/api/search/icdo3": {
      "get": {
        "tags": [
          "Search"
        ],
        "summary": "Search ICD-O-3 by code or description",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "ICD-O-3 code or partial description. If not specified, a code or description parameter is expected.",
            "type": "string"
          },
          {
            "name": "code",
            "in": "query",
            "description": "ICD-O-3 code or prefix (eg: 8000/3). If not specified, a description is expected.",
            "type": "string",
            "example": "8000/3"
          },
          {
            "name": "description",
            "in": "query",
            "description": "Keyword or partial description (eg: adenocarcinoma). If not specified, an ICD-O-3 code is expected.",
            "type": "string",
            "example": "adenocarcinoma"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/ICDO3SearchResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    },
    "/api/batch": {
      "post": {
        "tags": [
          "Batch Export"
        ],
        "summary": "Batch export search and/or translation results for ICD-10 and ICD-O-3 codes",
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/BatchExportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/BatchExportResponse"
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "ICD10SearchResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "parentId": {
          "type": "integer",
          "format": "int64"
        },
        "code": {
          "type": "string"
        },
        "parentCode": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "description": {
          "type": "integer"
        },
        "level": {
          "type": "integer"
        },
        "children": {
          "type": "array"
        }
      }
    },
    "ICDO3SearchResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "histology": {
          "type": "string"
        },
        "behavior": {
          "type": "string"
        },
        "preferred": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "TranslateRequest": {
      "type": "object",
      "properties": {
        "params": {
          "type": "string",
          "description": "ICD-10 code or ICD-O-3 code is expected",
          "default": "C10.0"
        }
      }
    },
    "TranslateResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "icd10": {
          "type": "string"
        },
        "icdo3": {
          "type": "string"
        },
        "icd10Description": {
          "type": "string"
        },
        "icdo3Description": {
          "type": "string"
        }
      }
    },
    "BatchExportRequest": {
      "type": "object",
      "properties": {
        "inputType": {
          "type": "string",
          "description": "Specifies the type of input data.",
          "enum": [
            "keywords",
            "icdo3",
            "icd10"
          ],
          "default": "keywords"
        },
        "input": {
          "type": "string",
          "description": "A newline-delimited list of input entries to search or translate."
        },
        "outputType": {
          "type": "string",
          "description": "Specifies the type of output data.",
          "enum": [
            "icdo3",
            "icd10"
          ],
          "default": "icdo3"
        },
        "outputFormat": {
          "type": "string",
          "description": "Specifies the output data format. Use 'csv' to export data as a csv file.",
          "enum": [
            "json",
            "csv"
          ],
          "default": "json"
        }
      }
    },
    "BatchExportResponse": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string"
        },
        "icd10": {
          "type": "string"
        },
        "icdo3": {
          "type": "string"
        },
        "icd10Description": {
          "type": "string"
        },
        "icdo3Description": {
          "type": "string"
        }
      }
    }
  }
}